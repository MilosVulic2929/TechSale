<resources>
    <!-- potrebno zbog menjanja tema na card view -->
    <declare-styleable name="cardStyle">
        <attr name="cardStyle" format="reference" />
    </declare-styleable>

    <!-- Base application theme. -->
    <style name="LightTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#00796b</item>
        <item name="colorPrimaryDark">#004c40</item>
        <item name="colorAccent">#8bc34a</item>
        <item name="colorButtonNormal">#8bc34a</item>
        <item name="cardStyle">@style/CardView.Light</item>
    </style>

    <style name="DarkTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimaryDarkTheme</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkThemeStatusBar</item>
        <item name="colorAccent">@color/colorAccentDarkTheme</item>
        <item name="android:windowBackground">@color/colorBackGround</item>
        <item name="android:itemBackground">@color/colorItemMenuBack</item>
        <item name="android:itemTextAppearance">@style/menu_item_color</item>
        <item name="cardStyle">@style/CardView.Dark</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="menu_item_color">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="LightTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
